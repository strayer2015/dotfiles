[core]
    editor = vim
    pager = delta
    excludesfile = ~/.gitignore_global
    autocrlf = input

[color]
    ui = auto

[alias]
    st = status -sb
    co = checkout
    ci = commit
    br = branch
    lg = log --graph --pretty=format:'%C(auto)%h%d %s %C(blue)%cr %C(green)(%an)' --abbrev-commit --date=relative
    unstage = reset HEAD --
    last = log -1 HEAD
    amend = commit --amend --no-edit
    fixup = commit --fixup
    squash = commit --squash
    lol = log --oneline --decorate --color --graph
    save = !git add -A && git commit -m 'savepoint'

[log]
    date = relative

[diff]
    tool = delta
    colorMoved = default

[delta]
    features = line-numbers decorations
    line-numbers = true
    side-by-side = true
    syntax-theme = Monokai Extended
    navigate = true
    dark = true

[merge]
    tool = vscode
    conflictstyle = diff3

[mergetool "vscode"]
    cmd = code --wait $MERGED

[credential]
    helper = osxkeychain

[init]
    defaultBranch = main
